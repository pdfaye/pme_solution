<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="view_tpe_children_form" model="ir.ui.view">
        <field name="name">hr.children.form</field>
        <field name="model">hr.children</field>
        <field name="arch" type="xml">
            <form string="Enfant en charge">
                <sheet>

                    <group>
                        <group>
                            <field name="nom" />
                        </group>
                        <group>
                            <field name="date_naissance" />
                        </group>
                        <group>
                            <field name="age" />
                        </group>

                    </group>
                </sheet>
            </form>
        </field>
    </record>

