                    </label>-->
                    <field name="marital" position="after">
                        <field
                            name="status_spouse"
                            attrs="{'invisible': [('marital','!=','married')]}"
                        />
                    </field>
                    <xpath expr="//group[@name='active_group']" position="after">
                        <!--<group string="Paie">
                            <field name="social_parts" />
                            <field name="coef" />
                        </group>-->
                        <group string="Contributions Sociales">
                            <field name="ipres_id" />
                            <field name="css_id" />
                            <field name="ipm_id" />
                        </group>
                    </xpath>
                    <field name="user_id" position="after">
                        <field name="matricule" />
                    </field>
                    <field name="passport_id" position="before">
                        <field name="cni_id" />
                    </field>
                </data>
            </field>
    </record>
