<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Root Menus -->


    <!-- abinet View -->
    <record id="cabinet_form_inherit" model="ir.ui.view">
        <field name="name">cabinet.view.form</field>
        <field name="model">cabinet</field>
        <field name="arch" type="xml">
            <form string="Cabinet">
                <sheet>

                    <group>
                        <group>
                            <field name="name" />
                            <field name="code" />
                            <field name="type" />
                            <field name="localisation" />
                            <field name="domaine" />
                        </group>
                        <group>
                            <field name="contact" />
                            <field name="site_web" />
                            <field name="service_offerts" />
                        </group>
                    </group>
                    <group>
                            <field name="description" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>


    <record id="cabinet_view_tree" model="ir.ui.view">
        <field name="name">cabinet.tree</field>
        <field name="model">cabinet</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="code"/>
                <field name="localisation"/>
                <field name="contact"/>
            </tree>
        </field>
    </record>

    <record id="cabinet_action" model="ir.actions.act_window">
        <field name="name">Cabinet</field>
        <field name="res_model">cabinet</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'search_default_all': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new Cabinet.
            </p>
            <p>
                Cabinet créé avec succes.
            </p>
        </field>
    </record>
    <record id="service_form_inherit" model="ir.ui.view">
            <field name="name">service.view.form</field>
            <field name="model">service</field>
            <field name="arch" type="xml">
                <form string="Service">
                    <sheet>

                        <group>
                                <field name="nom" />
                        </group>
                        <group>
                                <field name="description" />
                        </group>
                    </sheet>
                </form>
            </field>
        </record>


        <record id="service_view_tree" model="ir.ui.view">
            <field name="name">service.tree</field>
            <field name="model">service</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="nom"/>
                    <field name="description"/>
                </tree>
            </field>
        </record>

        <record id="service_action" model="ir.actions.act_window">
            <field name="name">Service</field>
            <field name="res_model">service</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{'search_default_all': 1}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create a new Cabinet.
                </p>
                <p>
                    Cabinet créé avec succes.
                </p>
            </field>
        </record>


</odoo>
